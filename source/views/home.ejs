<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="/create">Create user</a>
    </div>

    <div class="table-container">
        <div class="title">List Users</div>
        <table>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>City</th>
                <th>Action</th>
            </tr>
            <!-- ForEach -->
            <% listUsers.forEach(function(user,index) { %>
                <tr>
                    <td>
                        <%= user.id %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.city %>
                    </td>
                    <td>
                        <a href="/update/<%= user.id %>">Edit</a>
                        <!-- <button action="/delete/<%= user.id %>" method="GET">Delete</button> -->
                        <a href="/delete/<%= user.id %>">Delete</a>
                    </td>
                </tr>
                <% }); %>
        </table>
    </div>



</body>

</html>